<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<property name="dialect">
			org.hibernate.dialect.MySQLInnoDBDialect
		</property>
		<property name="connection.url">jdbc:mysql:///forum</property>
		<property name="connection.username">root</property>
		<property name="connection.password">1234</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="myeclipse.connection.profile">
			mysql_conn
		</property>

		<!-- 设置控制台输出sql语句 -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<!-- 配置c3p0数据源连接池 -->
		<property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.acquire_increment">5</property>
		<property name="hibernate.c3p0.idle_test_period">2000</property>
		<property name="hibernate.c3p0.timeout">2000</property>
		<!-- 优化数据库服务器的访问和服务性能 -->
		<property name="hibernate.jdbc.fetch_size">100</property>
		<property name="hibernate.jdbc.batch_size">30</property>
		<!-- 配置ORM映射文件 -->
		<mapping resource="com/df/dao/pojo/Reply.hbm.xml" />
		<mapping resource="com/df/dao/pojo/Message.hbm.xml" />
		<mapping resource="com/df/dao/pojo/Question.hbm.xml" />
		<mapping resource="com/df/dao/pojo/User.hbm.xml" />
		<mapping resource="com/df/dao/pojo/QuestionType.hbm.xml" />



	</session-factory>

</hibernate-configuration>